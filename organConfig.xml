<collection shelf="organConfig">



<organ>
    <!-- name作为唯一标识符 -->
    <name>example</name>
    <!-- neuron必须和baseneuron.xml里的name一致并且存在,多个用逗号分割 -->
    <neuron>neuron1</neuron>  
    <!-- cointype测试币种 -->
    <cointype>btcusdt</cointype>
    <!-- timetype时间间隔 
    1m    3m    5m    15m    30m    1h    2h    4h
    6h    8h    12h    1d    3d    1w    1M    -->
    <timetype>1m</timetype>
    <!-- type用来区分多个神经元之间的关系，如果为单个神经元写none
    &lt; < 小于号
    &gt; > 大于号
    &amp; & 和
    &apos; ' 单引号
    &quot; " 双引号 
    -->
    <buytype>none</buytype>
    <selltype>none</selltype>
    <shortbuytype>none</shortbuytype>
    <shortselltype>none</shortselltype>
    <!-- feeRatio税率 -->
    <feeRatio>0.001</feeRatio>
    <!-- capital初始资金 -->
    <capital>1</capital>
    <!-- pos初始仓位 -->
    <pos>0</pos>
    <!-- buyonce单次购买仓位数量，0为全仓买 -->
    <buyonce>0</buyonce>
    <!-- sellonce单次出售仓位数量，0为全仓卖 -->
    <sellonce>0</sellonce>
    <!-- shortmax做空最大借币数量 -->
    <shortmax>1</shortmax>
    <!-- shortbuyonce单次做空借币数量，0为全仓买 -->
    <shortbuyonce>1</shortbuyonce>
    <!-- shortsellonce做空单次出售仓位数量，0为全仓卖 -->
    <shortsellonce>0</shortsellonce>
    <auth>pans</auth>
    <date>2018/8/27</date>
    <description>这是一个单神经元器官的示例</description>
</organ>

<organ>
    <name>multiple-example</name>
    <neuron>neuron1,neuron2</neuron>
    <cointype>btcusdt</cointype>
    <timetype>1m</timetype>
    <buytype>neuron1 and neuron2</buytype>
    <selltype>neuron1 and neuron2</selltype>
    <shortbuytype>none</shortbuytype>
    <shortselltype>none</shortselltype>
    <feeRatio>0.001</feeRatio>
    <capital>1</capital>
    <pos>0</pos>
    <buyonce>0</buyonce>
    <sellonce>0</sellonce>
    <shortmax>1</shortmax>
    <shortbuyonce>1</shortbuyonce>
    <shortsellonce>0</shortsellonce>
    <auth>pans</auth>
    <date>2018/8/27</date>
    <description>这是一个多神经元器官的示例</description>
</organ>

